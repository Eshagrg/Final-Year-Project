@model Site.DataAccess.Domain.AddStaff_VM;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "AdminLayout/_AdminLayout";
}

<section class="section">
    <div class="section-header">
        <h1>@Localizer["Staff"]</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">@Localizer["Dashboard"]</a></div>
            <div class="breadcrumb-item">@Localizer["Staff"]</div>
        </div>
    </div>

    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post" class="needs-validation" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>@Localizer["Full Name"]</label>
                                <input type="text" asp-for="FullName" class="form-control" required>
                            </div>
                            <input type="text" asp-for="Id" class="form-control" required value="@Model.Id" hidden>
                            <div class="form-group">
                                <label>@Localizer["Email"]</label>
                                <input type="email" asp-for="Email" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>@Localizer["Phone Number"]</label>
                                <input type="number" maxlength="10" asp-for="PhoneNo" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>@Localizer["Address"]</label>
                                <input type="text" asp-for="Address" class="form-control" required>
                            </div>
                            <div class="chocolat-parent">
                                <label>@Localizer["Image"]</label>
                                <div data-crop-image="300" style="overflow: hidden; position: relative; height: 300px;">
                                  
                                    @if (Model.UploadImageString != null)
                                    {
                                        <img alt="image" src="@Model.UploadImageString" class="rounded mx-auto" style="max-width:150px;align-items:start">
                                    }
                                    else
                                    {
                                        <span>@Localizer["No image available"]</span>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <span class="text-primary">@Localizer["Add a new image if you want to update the image"]</span>
                                <label>@Localizer["Upload Image"]</label>
                                <input asp-for="UploadImage" class="form-control">
                            </div>

                            <div class="card-footer">
                                <a asp-controller="Admin" asp-action="StaffIndex" class="btn btn-primary text-white">@Localizer["Back to List"]</a>
                                <button type="submit" class="btn btn-primary text-white">@Localizer["Update Staff"]</button>

                            </div>

                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>