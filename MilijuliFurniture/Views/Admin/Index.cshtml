@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "AdminLayout/_AdminLayout";
    ViewData["Title"] = "Home Page";
}



<style>
    .card-body {
        background-color: #f0f0f0; /* Choose your desired color */
    }

</style>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-800" style="font-weight: bold; color: white;">@Localizer["Dashboard"]</h1>


</div>

<!-- Content Row -->
<div class="row">


    <div class="col-xl-3 col-md-4 mb-4">
        <div class="card border-left-primary shadow" style="background-color: darkslateblue; height: 120px;">
      <div class="card-body" >
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            @Localizer["Total"]
                            <br />
                            @Localizer["Sales"]
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-white" id="totalSale"></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-chart-line fa-2x text-white"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-2 col-md-4 mb-4">
        <div class="card border-left-success shadow" style="background-color: darkcyan; height: 120px;">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            @Localizer["Total"]
                            <br />
                            @Localizer["Users"]
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-white" id="totalUsers"></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-tie fa-2x text-white"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <div class="col-xl-2 col-md-4 mb-4">
        <div class="card border-left-info shadow" style="background-color: darkslategrey; height: 120px;">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            @Localizer["Total"]
                            <br />
                            @Localizer["Products"]
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-white" id="totalProducts"></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-couch fa-2x text-white"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <div class="col-xl-2 col-md-4 mb-4">
        <div class="card border-left-warning shadow" style="background-color: steelblue; height: 120px;">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            @Localizer["Total"]
                            <br />
                            @Localizer["Categories"]
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-white" id="totalCategories"></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-chair fa-2x text-white"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-4 mb-4">
        <div class="card border-left-success shadow" style="background-color: #46648c; height: 120px;">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            @Localizer["Total"]
                            <br />
                            @Localizer["Incomes"]
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-white">Rs <span id="totalIncomes"></span></div>

                    </div>
                    <div class="col-auto">
                        <i class="fas fa-rupee-sign fa-2x text-white"></i>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Content Row -->

<div class="row">

    <!-- Area Chart -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3">
                <h6>@Localizer["Last Week Sales"]</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="chart-area" style="height: 350px !important;">
                    <canvas id="charSales"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Pie Chart-->
    <div class="col-xl-4 col-lg-5">
    <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div class="card-header py-3">
            <h6>@Localizer["Top 5 selling products"]</h6>
               
        </div>
        <!-- Card Body -->
        <div class="card-body">
            <div class="chart-pie" style="height: 350px !important ;">
                <canvas id="charProducts"></canvas>
            </div>
        </div>
    </div>
</div>

@section Script {
        <script src="~/vendors/chart.js/chart.min.js"></script>
    <script src="~/js/views/AdminDashBoard.js"></script>
}

