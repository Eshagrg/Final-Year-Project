@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    var userIdClaim = User.Claims.FirstOrDefault(c => c.Type == "UserId")?.Value;
}
<link rel="stylesheet" href="~/admin/css/custom.css">

<style>
    .main-sidebar .sidebar-menu li.active a {
        color: black
    }

    body.sidebar-mini .main-sidebar .sidebar-menu > li.active > a {
        box-shadow: 0 4px 8px #acb5f6;
        background-color: darkblue;
        color: #fff;
    }

    .main-sidebar .sidebar-menu li.menu-header {
        color: darkblue
    }

    body:not(.sidebar-mini) .sidebar-style-2 .sidebar-menu > li.active > a:before {
        background-color: darkblue
    }

    .govlogo {
        height: 110px;
        width: 200px;
        align-items: center;
        margin-left: 5px;
    }

    .reslogo {
        height: 60px;
        width: 80px;
    }

    .dropdown:hover > a.nav-link span {
        font-weight: bold;
        color: black; /* Bold black color */
    }

    .dropdown .dropdown-menu .nav-link:focus span,
    .dropdown .dropdown-menu .nav-link:active span {
        color: #888; /* Faded color on click */
    }

</style>
<div class="main-sidebar sidebar-style-2">
    <aside id="sidebar-wrapper">
        <div class="sidebar-brand">
            <a asp-controller="Admin" asp-action="index" style="padding-bottom:10px; display:flex;"><img src="~/img/logomilijuli.png" class="govlogo" /></a>
        </div>
        <div class="sidebar-brand sidebar-brand-sm">
            <a asp-controller="Home" asp-action="index"><img src="~/img/milijuliLogo.png" class="reslogo" /></a>
        </div>
        <ul class="sidebar-menu">
            <li class="menu-header">@Localizer["Dashboard"]</li>

            <li class="active">
                <a asp-controller="Admin" asp-action="Index" class="nav-link">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>@Localizer["Dashboard"]</span>
                </a>
            </li>
            <li class="active">
                <a asp-controller="Admin" asp-action="UpdateStaff" asp-route-id="@userIdClaim" class="nav-link">
                    <i class="fas fa-user-cog"></i>
                    <span>@Localizer["Profile"]</span>
                </a>
            </li>
            </li>
            <li class="menu-header">@Localizer["Inventory"]</li>

         
            <li class="active">
                <a asp-controller="Admin" asp-action="StaffIndex" class="nav-link">
                    <i class="fas fa-user-tie"></i>
                    <span>@Localizer["Staffs"]</span>
                </a>
            </li>
            <li class="active">
                <a asp-controller="Admin" asp-action="CategoryIndex" class="nav-link">
                    <i class="fas fa-chair"></i>
                    <span>@Localizer["Category"]</span>
                </a>
            </li>
            <li class="active">
                <a asp-controller="Admin" asp-action="Productindex" class="nav-link">
                    <i class="fas fa-couch"></i>
                    <span>@Localizer["Products"]</span>
                </a>
            </li>
            <li class="menu-header">@Localizer["Sale"]</li>
        

            <li class="active">
                <a asp-controller="Sales" asp-action="SalesIndex" class="nav-link">
                    <i class="fas fa-chart-line"></i>
                    <span>@Localizer["New Sale"]</span>
                </a>
            </li>
            <li class="active">
                <a asp-controller="Sales" asp-action="SalesHistory" class="nav-link">
                    <i class="fa fa-file"></i>
                    <span>@Localizer["Sales Record"]</span>
                </a>
            </li>
           
            <li class="menu-header">@Localizer["Reports"]</li>
            <li class="dropdown active">
                <a href="#" class="nav-link has-dropdown" data-toggle="dropdown">
                    <i class="fas fa-chart-bar"></i>
                    <span style="color: black; font-size: 13px;">@Localizer["Sale Report"]</span>
                </a>

                <ul class="dropdown-menu" style="display: none">
                    <li><a class="nav-link" asp-controller="Report" asp-action="SaleReportSale">Sales Report</a></li>
                    <li><a class="nav-link" asp-controller="Report" asp-action="SalesTypeHistory">Sales By Type</a></li>
                    <li><a class="nav-link" href="layout-top-navigation.html">Top Navigation</a></li>
                </ul>
            </li>
        </ul>
    </aside>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

